.Side-bar
  .Side-bar__user-name
    .Side-bar__user-name__top-items
      .Side-bar__user-name__top-items__name 
        = current_user.name
      %ul.Side-bar__user-name__top-items__btns 
        %li.Side-bar__user-name__top-items__btns__btn
        = link_to new_group_path do
          %i.fa.fa-edit
        %li.Side-bar__user-name__top-items__btns__btn
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog

  .Side-bar__group-list
    - current_user.groups.each do |g|
      .Side-bar__group-list__group-box
        = link_to '#' do
          .Side-bar__group-list__group-box__group-name
            = g.name
          .Side-bar__group-list__group-box__group-status
            まだメッセージがありません